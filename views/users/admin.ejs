<%- include('../partials/header.ejs') %>
<link rel="stylesheet" href="/css/base.css">
<link rel="stylesheet" href="/css/users/admin.css">

<div class="page-container">
    <%- include('../partials/nav.ejs') %>
    <div id="controls-container">
        <!-- Add Product -->
        <div class="add-product-container">
            <form action="/admin" method="POST" enctype="multipart/form-data">
                <h1 class="add-product-title">Add Product</h1>
                <label for="title">Title:</label>
                <input type="text" name="title" class="margin margin-right">
                <label for="price">Price:</label>
                <input type="text" name="price" class="margin margin-right">
                <div class="align-center">
                    <label for="desc" class="underline">Description</label>
                    <textarea type="text" name="desc" class="margin" rows="4" cols="30"></textarea>
                    <hr>
                    <label for="image" class="margin underline">Small image</label>
                    <input type="file" name="image" id="image" class="margin">
                    <hr>
                    <label for="image" class="margin underline">Large image</label>
                    <input type="file" name="image" id="image" class="margin">
                </div>
                <input type="submit" class="submit-btn" value="Upload">
            </form>
        </div>

        <!-- User Info -->
        <div class="user-container">
            <h1 class="admin-title">User Info</h1>
            <div class="field-names">
                <h3 class="user-info">Username / Admin</h3>
            </div>
            <hr>
            <div class="center">
                <input type="text" placeholder="Search..." class="margin">
            </div>
            <div>
            <% users.forEach(user => { %>
                <div class="field-names">
                    <h4 class="admin-toggle"><%= user.username %> / <%= user.admin %></h4>
                    <a href="/admin/<%= user.id %>" class="toggle-btn"><h6>Toggle</h6></a>
                </div>
            <% }); %>
            </div>
        </div>
    </div>

<%- include('../partials/footer.ejs') %>
</div>
</body>
</html>